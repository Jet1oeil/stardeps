{
	"name": "OpenSSL",
	"homepage": "https://www.openssl.org/",
	"scm": {
        "type": "git",
        "url": "https://github.com/openssl/openssl"
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/config ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "win32-gcc": {
            "host":"linux",
            "configure": [
                "${PACKAGE_SRC_PATH}/config ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "darwin-clang-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/Configure darwin64-x86_64-cc ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        }
    }
}
