{
	"name": "OpenSSL",
	"homepage": "https://www.openssl.org/",
	"scm": {
        "type": "git",
        "url": "https://github.com/openssl/openssl"
    },
    "options": {
        "shared" : {
            "vars": {
                "OPTIONS::SHARED":"shared"
            }
        }
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/config ${OPTIONS::SHARED} --prefix=${PACKAGE_PREFIX_PATH} --openssldir=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "linux-mingw-gcc-32": {
            "configure": [
                "${PACKAGE_SRC_PATH}/Configure mingw --cross-compile-prefix=${CROSS_COMPILER_PREFIX} ${OPTIONS::SHARED} --prefix=${PACKAGE_PREFIX_PATH} --openssldir=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "linux-mingw-gcc-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/Configure mingw64 --cross-compile-prefix=${CROSS_COMPILER_PREFIX} ${OPTIONS::SHARED} --prefix=${PACKAGE_PREFIX_PATH} --openssldir=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "win32-gcc": {
            "host":"linux",
            "configure": [
                "${PACKAGE_SRC_PATH}/config --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::SHARED} --openssldir=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "darwin-clang-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/Configure darwin64-x86_64-cc ${OPTIONS::SHARED} --prefix=${PACKAGE_PREFIX_PATH} --openssldir=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        }
    }
}
