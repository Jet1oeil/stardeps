{
	"name": "FFMPEG",
	"homepage": "https://ffmpeg.org/",
	"scm": {
        "type": "git",
        "url": "https://git.ffmpeg.org/ffmpeg.git"
    },
    "options": {
        "debug" : {
            "vars": {
                "OPTIONS::DEBUG":"--disable-optimizations --disable-stripping"
            }
        },
        "shared" : {
            "vars": {
                "OPTIONS::SHARED":"--enable-shared"
            }
        },
        "openh264" : {
            "dependencies": {
                "latest": {
                    "openh264" : {}
                }
            },
            "vars": {
                "OPTIONS::OPENH264":"--enable-libopenh264"
            }
        },
        "x264" : {
            "dependencies": {
                "latest": {
                    "x264" : {}
                }
            },
            "vars": {
                "OPTIONS::X264":"--enable-libx264"
            }
        },
        "x265" : {
            "dependencies": {
                "latest": {
                    "x265" : {}
                }
            },
            "vars": {
                "OPTIONS::X265":"--enable-libx265"
            }
        },
        "fdk-aac" : {
            "dependencies": {
                "latest": {
                    "fdk-aac" : {}
                }
            },
            "vars": {
                "OPTIONS::FDKAAC":"--enable-libfdk-aac"
            }
        },
        "ass" : {
            "dependencies": {
                "latest": {
                    "ass" : {}
                }
            },
            "vars": {
                "OPTIONS::ASS":"--enable-libass --enable-libfdk-aac"
            }
        },
        "freetype" : {
            "dependencies": {
                "latest": {
                    "freetype2" : {}
                }
            },
            "vars": {
                "OPTIONS::FREETYPE":"--enable-libfreetype"
            }
        }
    },
    "vars":{
        "CONFIGURE_OPTIONS":"--enable-gpl --enable-nonfree ${OPTIONS::DEBUG} ${OPTIONS::SHARED} ${OPTIONS::OPENH264} ${OPTIONS::X264} ${OPTIONS::X265} ${OPTIONS::FDKAAC} ${OPTIONS::ASS} ${OPTIONS::FREETYPE}"
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/configure ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        },
        "linux-mingw-gcc-32": {
            "configure": [
                "${PACKAGE_SRC_PATH}/configure --arch=x86 --target-os=mingw32 --cross-prefix=${CROSS_COMPIL_PREFIX}- --pkg-config=${CROSS_COMPIL_PREFIX}-pkg-config ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        },
        "linux-mingw-gcc-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/configure -arch=x86_64 --target-os=mingw64 --cross-prefix=${CROSS_COMPIL_PREFIX}- --pkg-config=${CROSS_COMPIL_PREFIX}-pkg-config ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        },
        "darwin-clang-64": {
            "configure": [
                "${PACKAGE_SRC_PATH}/configure ${CONFIGURE_OPTIONS} --prefix=${PACKAGE_PREFIX_PATH}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        }
    }
}
