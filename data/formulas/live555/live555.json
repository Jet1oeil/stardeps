{
	"name": "Live555",
	"homepage": "https://http://www.live555.com/",
	"scm": {
        "type": "archive",
        "url": "http://www.live555.com/liveMedia/public/live555-latest.tar.gz"
    },
    "options": {
        "openssl" : {
            "dependencies": {
                "latest": {
                    "openssl" : {"min":"1.1"}
                },
            },
            "vars": {
                "OPTIONS::NOOPENSSL":""
            }
        },
        "no-openssl" : {
            "vars": {
                "OPTIONS::NOOPENSSL":"-no-openssl"
            }
        }
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "chmod -R u+rw ${PACKAGE_SRC_PATH}",
                "${TOOL::RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}",
                "bash -c \"\"echo 'PREFIX = ${PACKAGE_PREFIX_PATH}' >> ${PACKAGE_BUILD_PATH}/config.linux${OPTIONS::NOOPENSSL}\"\"",
                "bash -c \"\"echo 'LIBDIR = $(PREFIX)/lib' >> ${PACKAGE_BUILD_PATH}/config.linux${OPTIONS::NOOPENSSL}\"\"",
                "${PACKAGE_BUILD_PATH}/genMakefiles linux${OPTIONS::NOOPENSSL}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install PREFIX=${PACKAGE_PREFIX_PATH}"
            ]
        },
        "darwin-clang-64": {
            "configure": [
                "chmod -R u+rw ${PACKAGE_SRC_PATH}",
                "${TOOL::RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}",
                "bash -c \"\"echo 'PREFIX = ${PACKAGE_PREFIX_PATH}' >> ${PACKAGE_BUILD_PATH}/config.macosx${OPTIONS::NOOPENSSL}\"\"",
                "bash -c \"\"echo 'LIBDIR = $(PREFIX)/lib' >> ${PACKAGE_BUILD_PATH}/config.macosx${OPTIONS::NOOPENSSL}\"\"",
                "${PACKAGE_BUILD_PATH}/genMakefiles macosx${OPTIONS::NOOPENSSL}\"\""
            ],
            "build": [
                "bash -c \"\"cd ${PACKAGE_SRC_PATH} && ${TOOL::MAKE}\"\""
            ],
            "install": [
                "bash -c \"\"cd ${PACKAGE_SRC_PATH} && ${TOOL::MAKE} install PREFIX=${PACKAGE_PREFIX_PATH}\"\""
            ]
        }
    }
}
