{
	"name": "OpenH264",
	"homepage": "http://www.openh264.org/",
	"scm": {
        "type": "git",
        "url": "https://github.com/cisco/openh264.git"
    },
    "options": {
        "debug" : {
            "vars": {
                "OPTIONS::DEBUG":"DEBUGSYMBOLS=True"
            }
        }
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "${RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}"
            ],
            "build": [
                "${MAKE} ${OPTIONS::DEBUG}"
            ],
            "install": [
                "${MAKE} install PREFIX=${PACKAGE_PREFIX_PATH}",
                "ln -sf ${PACKAGE_PREFIX_PATH}/lib/pkgconfig/openh264.pc ${PKG_CONFIG_LIBDIR}/"
            ]
        },
        "linux-mingw-gcc-32": {
            "configure": [
                "${RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}"
            ],
            "build": [
                "${MAKE} ARCH=i386 OS=mingw_nt CC=${CROSS_COMPIL_PREFIX}-gcc CXX=${CROSS_COMPIL_PREFIX}-g++ AR=${CROSS_COMPIL_PREFIX}-ar ${OPTIONS::DEBUG}"
            ],
            "install": [
                "${MAKE} install PREFIX=${PACKAGE_PREFIX_PATH}",
                "ln -sf ${PACKAGE_PREFIX_PATH}/lib/pkgconfig/openh264.pc ${PKG_CONFIG_LIBDIR}/"
            ]
        },
        "linux-mingw-gcc-64": {
            "configure": [
                "${RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}"
            ],
            "build": [
                "${MAKE} ARCH=x86_64 OS=mingw_nt ${OPTIONS::DEBUG}"
            ],
            "install": [
                "${MAKE} install PREFIX=${PACKAGE_PREFIX_PATH}",
                "ln -sf ${PACKAGE_PREFIX_PATH}/lib/pkgconfig/openh264.pc ${PKG_CONFIG_LIBDIR}/"
            ]
        }
    }
}
