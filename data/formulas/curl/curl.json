{
	"name": "Curl",
	"homepage": "https://curl.haxx.se/",
	"scm": {
        "type": "git",
        "url": "git://github.com/bagder/curl.git"
    },
    "dependencies": {
        "latest": {
            "openssl" : {"min":"1.1"}
        },
        "7.41": {
            "openssl" : {"min":"1.0", "max":"1.1"}
        }
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "${TOOL::RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}",
                "${PACKAGE_BUILD_PATH}/buildconf",
                "${PACKAGE_BUILD_PATH}/configure --prefix=${PACKAGE_PREFIX_PATH} --enable-debug"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        }
    }
}
