{
	"name": "Curl",
	"homepage": "https://curl.haxx.se/",
	"scm": {
        "type": "git",
        "url": "git://github.com/bagder/curl.git"
    },
    "options": {
        "debug" : {
            "vars": {
                "OPTIONS::DEBUG":"--enable-debug"
            }
        },
        "openssl" : {
            "dependencies": {
                "latest": {
                    "openssl" : {"min":"1.1"}
                },
                "7.41": {
                    "openssl" : {"min":"1.0", "max":"1.1"}
                }
            },
            "vars": {
                "OPTIONS::SSL":"--with-ssl=${PACKAGE::OPENSSL::PATH}"
            }
        },
        "darwinssl" : {
            "vars": {
                "OPTIONS::SSL":"--with-darwinssl"
            }
        }
    },
    "recipes": {
        "linux-gcc-64": {
            "configure": [
                "${TOOL::RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}",
                "${PACKAGE_BUILD_PATH}/buildconf",
                "${PACKAGE_BUILD_PATH}/configure --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::DEBUG} ${OPTIONS::SSL}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        },
        "darwin-clang-64": {
            "configure": [
                "${TOOL::RSYNC} -a -v --delete-after ${PACKAGE_SRC_PATH}/ ${PACKAGE_BUILD_PATH}",
                "${PACKAGE_BUILD_PATH}/buildconf",
                "${PACKAGE_BUILD_PATH}/configure --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::DEBUG} ${OPTIONS::SSL}"
            ],
            "build": [
                "${TOOL::MAKE}"
            ],
            "install": [
                "${TOOL::MAKE} install"
            ]
        }
    }
}
