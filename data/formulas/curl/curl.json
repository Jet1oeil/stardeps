{
	"name": "Curl",
	"homepage": "https://curl.haxx.se/",
	"scm": {
        "type": "git",
        "url": "git://github.com/bagder/curl.git"
    },
    "options": {
        "debug" : {
            "vars": {
                "OPTIONS::DEBUG":"--enable-debug"
            }
        },
        "openssl" : {
            "dependencies": {
                "latest": {
                    "openssl" : {"min":"1.1"}
                },
                "7.41": {
                    "openssl" : {"min":"1.0", "max":"1.1"}
                }
            },
            "vars": {
                "OPTIONS::SSL":"--with-ssl=${DEPENDENCY::OPENSSL::ROOTPATH}"
            }
        },
        "darwinssl" : {
            "vars": {
                "OPTIONS::SSL":"--with-darwinssl"
            }
        },
        "winssl" : {
            "vars": {
                "OPTIONS::SSL":"--with-winssl"
            }
        }
    },
    "recipes": {
        "linux-gcc-64": {
            "prepare": [
                "${PACKAGE_SRC_PATH}/buildconf"
            ],
            "configure": [
                "${PACKAGE_BUILD_PATH}/configure --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::DEBUG} ${OPTIONS::SSL}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        },
        "linux-mingw-gcc-32": {
            "prepare": [
                "${PACKAGE_SRC_PATH}/buildconf"
            ],
            "configure": [
                "${PACKAGE_SRC_PATH}/configure --host=${CROSS_COMPIL_PREFIX} --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::DEBUG} ${OPTIONS::SSL}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        },
        "linux-mingw-gcc-64": {
            "prepare": [
                "${PACKAGE_SRC_PATH}/buildconf"
            ],
            "configure": [
                "${PACKAGE_SRC_PATH}/configure --host=${CROSS_COMPIL_PREFIX} --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::DEBUG} ${OPTIONS::SSL}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        },
        "darwin-clang-64": {
            "prepare": [
                "${PACKAGE_SRC_PATH}/buildconf"
            ],
            "configure": [
                "${PACKAGE_BUILD_PATH}/configure --prefix=${PACKAGE_PREFIX_PATH} ${OPTIONS::DEBUG} ${OPTIONS::SSL}"
            ],
            "build": [
                "${MAKE}"
            ],
            "install": [
                "${MAKE} install"
            ]
        }
    }
}
